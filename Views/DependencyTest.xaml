<UserControl 
    x:Class="MyPlathsRecordingSoftware.Views.DependencyTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyPlathsRecordingSoftware.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid Name="contentgrid" Visibility="Collapsed">
            <TextBlock Text="Content Grid" />
            <Button Content="ContentGridButton" />
        </Grid>

        <Grid Name="spoilergrid" Visibility="Visible">
            <StackPanel>
                <TextBlock Text="{Binding Secret}" />
            <Button Content="SpoilerGridButton" />
           
           </StackPanel>

        </Grid>

    </Grid>
</UserControl>
